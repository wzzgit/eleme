        &::after
            -webkit-transform:scaleY(0.5)
            transform:scaleY(0.5)

body,html
    line-height:1
    font-weight:200

.clearfix
    display:inline-block
    &:after
        content:' '
        clear:both
        line-height:0
        display:block
        visibility:hidden
        height:0
